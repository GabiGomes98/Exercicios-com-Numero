main(){ //função principal
    short int num1;
    long int num2;
    printf("Digite um valor para num1: ");
    printf("Digite um valor para num2: ");
    scanf(%hd,&num1);
    printf("Digite um valor para num1: ");
    scanf(%hd,&num2);
    printf("Digite um valor para num1: ");
    printf("Tamanho de inteiro num1: %d,%hd bytes" num1,sizeof(num1));
    printf("\nTamanho de inteiro %d, %1d bytes,num2,sizeof(num2));
 
